<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:elevation="10dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#fff"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/yearText"
                    android:layout_alignParentRight="true"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017"
                    android:textSize="20sp"
                    android:textColor="#BDBDBD"/>
                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/dayText"
                    android:text="06"
                    android:textSize="45sp"
                    android:textColor="#BDBDBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/monthText"
                    android:textColor="#BDBDBD"
                    android:text="월요일"
                    android:textSize="22sp"
                    android:layout_alignBottom="@id/dayText"
                    android:layout_toRightOf="@id/dayText"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/shapeView"
                    android:layout_marginLeft="10dp"
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:background="#A7FFEB"/>
                <LinearLayout
                    android:layout_toRightOf="@id/shapeView"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아침"
                        android:layout_toRightOf="@id/shapeView"
                        android:textSize="23sp"/>

                    <TextView
                        android:id="@+id/breakfastText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="10dp"
                        android:text="hello world"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/shapeView1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:background="#A7FFEB"/>
                <LinearLayout
                    android:layout_toRightOf="@id/shapeView1"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="점심"
                        android:layout_toRightOf="@id/shapeView"
                        android:textSize="23sp"/>

                    <TextView
                        android:id="@+id/lunchText"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:text="hello world"
                        android:layout_marginRight="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/shapeView2"
                    android:layout_marginLeft="10dp"
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:background="#A7FFEB"/>
                <LinearLayout
                    android:layout_toRightOf="@id/shapeView2"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="저녁"
                        android:layout_toRightOf="@id/shapeView"
                        android:textSize="23sp"/>

                    <TextView
                        android:id="@+id/dinnerText"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:text="hello world"
                        android:layout_marginRight="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>




</RelativeLayout>
