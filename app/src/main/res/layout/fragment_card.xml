<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:elevation="10dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#fff"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/dayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:text="03"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="32dp"/>

            <TextView
                android:id="@+id/monthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="9월"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="8dp"
                android:layout_alignBottom="@id/dayText"
                android:layout_toRightOf="@id/dayText"/>

            <TextView
                android:id="@+id/yearText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="2000"
                android:layout_margin="16dp"
                android:layout_alignParentRight="true"/>

            <LinearLayout
                android:layout_below="@id/dayText"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/view1"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:background="#000"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아침"
                            android:textSize="20sp"
                            android:layout_alignBottom="@id/view1"
                            android:layout_toRightOf="@id/view1"/>

                        <TextView
                            android:id="@+id/breakfastText"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="32dp"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/view1"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/view2"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:background="#000"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="점심"
                            android:textSize="20sp"
                            android:layout_alignBottom="@id/view2"
                            android:layout_toRightOf="@id/view2"/>

                        <TextView
                            android:textSize="16sp"
                            android:id="@+id/lunchText"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="32dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/view2"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/view3"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:background="#000"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="저녁"
                            android:textSize="20sp"
                            android:layout_alignBottom="@id/view3"
                            android:layout_toRightOf="@id/view3"/>

                        <TextView
                            android:textSize="16sp"
                            android:id="@+id/dinnerText"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="32dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/view3"/>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/mealicon"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>




</RelativeLayout>
